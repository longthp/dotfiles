set shell powershell
set hidden true
set ignorecase true
set dirpreviews false
set icons true
set scrolloff 8
set cursorpreviewfmt ''

cmd open &start $Env:f

# Remove default bindings
map m
map n
map "'"
map '"'
map d
map c
map e
map f

# Key bindings
map w $powershell
map md %~/dotfiles/tmp/lf-mkdir.ps1
map mf %~/dotfiles/tmp/lf-mkfile.ps1
map f %~/dotfiles/tmp/lf-fzf-nvim.ps1
map e $nvim $Env:f
# map f $nvim $(fzf)

map R reload
map C clear
map D delete
map p paste
map x cut
map y copy

map <enter> shell
map <tab> $~/scoop/apps/quicklook/current/QuickLook.exe $Env:f
map mp $~/scoop/apps/mpv/current/mpv.exe $Env:f
